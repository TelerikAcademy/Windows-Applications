<Page
    x:Class="SQLiteDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SQLiteDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="GetAllButton" Content="Get all" HorizontalAlignment="Stretch" Margin="10,138,10,0" VerticalAlignment="Top" Height="46" Click="GetAllButtonClick"/>
        <TextBlock x:Name="AllItemsTextBlock" Margin="10,189,10,10" TextWrapping="Wrap" Text=""/>
        <TextBox x:Name="NameTextBox" Margin="10,10,10,0" TextWrapping="Wrap" Text="" PlaceholderText="Item name" VerticalAlignment="Top" RenderTransformOrigin="2.593,1.91"/>
        <TextBox x:Name="PriceTextBox" Margin="10,47,10,0" TextWrapping="Wrap" Text="" PlaceholderText="Item price" VerticalAlignment="Top"/>
        <Button x:Name="AddNewItemButton" Content="Add new item" HorizontalAlignment="Stretch" Margin="10,84,10,0" VerticalAlignment="Top" Height="49" Click="AddNewItemButtonClick"/>
    </Grid>
</Page>
